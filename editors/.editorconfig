root = true

[*]
charset = utf-8
end_of_file = lf
insert_final_newline = true
trim_trailing_whitespace = true

[*.{c,cpp,h,hpp,cc,java}]
indent_style = tab
tab_width = 8
max_line_length = 79

[*.py]
indent_style = space
indent_size = 4
max_line_length = 79

[*.{html,css,js,jsx,ts,tsx}]
indent_style = space
indent_size = 2

[*.{yml,yaml,tmpl}]
indent_style = space
indent_size = 2

